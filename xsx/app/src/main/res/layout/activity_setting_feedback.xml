<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/setting_feedback_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y144"
        android:background="@color/w1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hometown_feedback_leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            android:src="@mipmap/left_arrow_black" />

        <TextView
            android:id="@+id/feedback_back"
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_toRightOf="@+id/hometown_feedback_leftarrow"
            android:onClick="back"
            android:clickable="true"
            android:text="@string/back" />

        <TextView
            style="@style/black_17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/feedback" />
    </RelativeLayout>
    <EditText
        android:id="@+id/feedback_editText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y556"
        android:layout_marginTop="@dimen/y48"
        android:paddingTop="@dimen/y30"
        android:paddingStart="@dimen/x48"
        android:paddingEnd="@dimen/x48"
        android:textSize="14sp"
        android:textColor="@color/b0"
        android:hint="@string/feed"
        android:gravity="top"
        android:background="@color/w1"/>

    <LinearLayout
        android:onClick="Commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginTop="@dimen/y60">
        <Button
            android:id="@+id/feedback_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x48"
            android:layout_marginEnd="@dimen/y48"
            android:alpha="0.5"
            android:text="@string/submit"
            android:textSize="17sp"
            android:textColor="@color/w0"
            android:background="@drawable/buttonstyle_green1" />
    </LinearLayout>
</LinearLayout>