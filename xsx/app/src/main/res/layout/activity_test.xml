<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--导航栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_144">
        <!--校上通知-->
        <ImageView
            android:id="@+id/xiaoshang_notice"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/xiaoshang_notice"
            android:layout_marginStart="@dimen/x48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--title-->
        <TextView
            style="@style/black_16sp"
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_centerVertical="true"
        android:id="@+id/scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/first"
                android:gravity="center"
                android:layout_width="@dimen/x808"
                android:layout_height="@dimen/y1247"
                android:layout_marginStart="@dimen/x136"
                android:src="@mipmap/xiaoshang_01" />

            <ImageView
                android:id="@+id/second"
                android:layout_marginStart="@dimen/x48"
                android:layout_width="@dimen/x808"
                android:layout_height="@dimen/y1247"
                android:src="@mipmap/xiaoshang_02" />

            <ImageView
                android:id="@+id/third"
                android:gravity="center"
                android:layout_width="@dimen/x808"
                android:layout_height="@dimen/y1247"
                android:layout_marginStart="@dimen/x48"
                android:src="@mipmap/xiaoshang_03" />

            <ImageView
                android:id="@+id/forth"
                android:layout_width="@dimen/x808"
                android:layout_height="@dimen/y1247"
                android:layout_marginStart="@dimen/x48"
                android:gravity="center"
                android:src="@mipmap/xiaoshang_04" />

            <ImageView
                android:id="@+id/five"
                android:layout_marginEnd="@dimen/x136"
                android:layout_width="@dimen/x808"
                android:layout_height="@dimen/y1247"
                android:layout_marginStart="@dimen/x48"
                android:src="@mipmap/xiaoshang_05" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/tuch"
        android:layout_marginBottom="@dimen/y66"
        android:src="@mipmap/xiaoshang_select1"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>

</RelativeLayout>
