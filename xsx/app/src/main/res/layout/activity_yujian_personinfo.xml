<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y144"
        android:background="@color/w1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/personinfo_leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            android:src="@mipmap/left_arrow_black" />

        <TextView
            style="@style/black_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_toRightOf="@+id/personinfo_leftarrow"
            android:clickable="true"
            android:onClick="Back"
            android:text="@string/back" />

        <TextView
            style="@style/black_17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/persondata" />

        <ImageView
            android:id="@+id/personinfo_threepoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x48"
            android:onClick="Next"
            android:src="@mipmap/toolbar_right_threepoint" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y102"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x72"
            android:src="@mipmap/mark_xingbiao" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x30"
            android:src="@mipmap/mark_anlian" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x180"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y84"
        android:orientation="horizontal">

        <com.xiaoshangxing.setting.utils.photo_choosing.RoundedImageView
            android:id="@+id/personinfo_headimg"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/x180"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/head_init"
            app:corner_radius="90dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/x24"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/personinfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="王振华"
                    android:textColor="@color/b0"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/setting_mycode_men" />
            </LinearLayout>

            <TextView
                android:id="@+id/personinfo_xueyaun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设计学院"
                android:textColor="@color/g0"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:onClick="SayHello"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y84"
            android:background="@drawable/buttonstyle"
            android:text="@string/sayhello"
            android:textColor="@color/b4"
            android:textSize="14sp" />

        <com.xiaoshangxing.utils.ImageButtonText
            android:id="@+id/bt1"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y84"
            android:layout_marginStart="@dimen/x20"
            android:background="@drawable/buttonstyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y78"
        android:divider="@drawable/toolbar_divider"
        android:orientation="vertical"
        android:paddingStart="@dimen/x48"
        android:showDividers="middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y144"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personifo_hometown"
                style="@style/black_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/hometown" />

            <TextView
                android:id="@+id/personifo_hometown_content"
                style="@style/black_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x72"
                android:layout_toRightOf="@id/personifo_hometown"
                android:text="某省 某市" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y144"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personinfo_tag"
                style="@style/black_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/tag" />

            <TextView
                android:id="@+id/personinfo_tag_content"
                style="@style/green1_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginStart="@dimen/x72"
                android:layout_toRightOf="@id/personinfo_tag" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x48"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y236"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dynamic_text"
                style="@style/black_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/dynamic" />

            <com.xiaoshangxing.setting.utils.photo_choosing.RoundedImageView
                android:id="@+id/dynamic_image1"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/x144"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x72"
                android:layout_toRightOf="@id/dynamic_text"
                android:scaleType="centerCrop"
                android:src="@mipmap/greyblock"
                app:corner_radius="6dp" />

            <com.xiaoshangxing.setting.utils.photo_choosing.RoundedImageView
                android:id="@+id/dynamic_image2"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/x144"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x9"
                android:layout_toRightOf="@id/dynamic_image1"
                android:scaleType="centerCrop"
                android:src="@mipmap/greyblock"
                app:corner_radius="6dp" />

            <com.xiaoshangxing.setting.utils.photo_choosing.RoundedImageView
                android:id="@+id/dynamic_image3"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/x144"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x9"
                android:layout_toRightOf="@id/dynamic_image2"
                android:scaleType="centerCrop"
                android:src="@mipmap/greyblock"
                app:corner_radius="6dp" />

            <com.xiaoshangxing.setting.utils.photo_choosing.RoundedImageView
                android:id="@+id/dynamic_image4"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/x144"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/x9"
                android:layout_toRightOf="@id/dynamic_image3"
                android:scaleType="centerCrop"
                android:src="@mipmap/greyblock"
                app:corner_radius="6dp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x48"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y144"
            android:onClick="More"
            android:orientation="horizontal">

            <TextView
                style="@style/black_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/more" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x48"
                android:src="@mipmap/right_arrow" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>