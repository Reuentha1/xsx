<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w3">
    <RelativeLayout
        android:id="@+id/setting_showhead_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y144"
        android:background="@color/w1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hometown_showhead_leftarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x24"
            android:src="@mipmap/left_arrow_black" />

        <TextView
            style="@style/black_16sp"
            android:id="@+id/showheadimg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x12"
            android:layout_toRightOf="@+id/hometown_showhead_leftarrow"
            android:clickable="true"
            android:text="@string/back" />

        <TextView
            style="@style/black_17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/headimg" />

        <ImageView
            android:id="@+id/showhead_threepoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/toolbar_right_threepoint"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x48"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/setting_showhead_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_showhead_toolbar"
        android:scaleType="fitCenter" />

</RelativeLayout>