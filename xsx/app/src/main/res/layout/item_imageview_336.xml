<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/x336"
            android:layout_height="@dimen/y336"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/x72"
            android:layout_height="@dimen/y72"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/x3"
            android:background="@drawable/selector_picture_input"
            android:button="@null"
            android:focusable="false" />


</RelativeLayout>