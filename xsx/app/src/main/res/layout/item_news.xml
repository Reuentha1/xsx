<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--新消息-->
    <RelativeLayout
    android:id="@+id/news"
    android:background="@drawable/lay_circular_g1"
    android:layout_marginStart="@dimen/x320"
    android:layout_marginEnd="@dimen/x320"
    android:layout_marginTop="@dimen/y48"
    android:layout_marginBottom="@dimen/y102"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y126">

    <com.xiaoshangxing.utils.layout.CirecleImage
    android:layout_marginStart="@dimen/x15"
    android:src="@mipmap/cirecleiamge_default"
    android:layout_centerVertical="true"
    android:id="@+id/news_head"
    android:layout_width="@dimen/x96"
    android:layout_height="@dimen/y96" />

    <TextView
    style="@style/black_16sp"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:layout_toRightOf="@+id/news_head"
    android:text="@string/app_name"
    android:paddingStart="@dimen/x60"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>