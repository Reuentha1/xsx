<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x456"
    android:layout_height="@dimen/y612"
    android:maxWidth="@dimen/x960"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y612">

        <ImageView
            android:id="@+id/iamge"
            android:layout_width="@dimen/x456"
            android:layout_height="@dimen/y612"
            android:maxWidth="@dimen/x960"
            android:scaleType="centerCrop" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/x72"
            android:layout_height="@dimen/y72"
            android:layout_alignParentEnd="true"
            android:layout_margin="6dp"
            android:background="@drawable/selector_picture_input"
            android:button="@null"
            android:focusable="false" />
    </RelativeLayout>

</LinearLayout>