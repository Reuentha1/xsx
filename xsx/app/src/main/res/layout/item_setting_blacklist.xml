<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y168"
    android:minHeight="@dimen/y168"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/blacklist_img"
        android:layout_width="@dimen/x132"
        android:layout_height="@dimen/x132"
        android:layout_marginStart="@dimen/x48"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/blacklist_text"
        style="@style/black_16sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/x52"
        android:gravity="center_vertical" />

</LinearLayout>