<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y144"
    android:background="@color/w1"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/toolbar_setting_leftarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x24"
        android:src="@mipmap/left_arrow_black"/>
    <TextView
        android:id="@+id/toolbar_setting_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/toolbar_setting_leftarrow"
        android:layout_marginLeft="@dimen/x12"
        android:text="@string/back"
        android:onClick="SettingBack"
        android:clickable="true"
        style="@style/black_16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/setting"
        style="@style/black_17sp"/>


</RelativeLayout>