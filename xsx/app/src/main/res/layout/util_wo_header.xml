    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingStart="@dimen/x15"
        android:paddingEnd="@dimen/x30"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lay_circular_g1"
        android:layout_below="@+id/up_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y126">

        <stan.reuenthal.com.xsx.MainFrame.xiaoshangxing.utils.layout.CirecleImage
            android:id="@+id/news_head"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/cirecleiamge_default"
            android:layout_width="@dimen/x96"
            android:layout_height="@dimen/y96" />

        <TextView
            android:id="@+id/news"
            android:textSize="16sp"
            android:textColor="@color/b0"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="1条新消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

